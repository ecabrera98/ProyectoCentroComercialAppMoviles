<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInformation">

    <TextView
        android:id="@+id/para_empeza1"
        android:layout_width="357dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="Bienvenido"
        android:textAppearance="@style/para_empeza"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reg_strese_2"
        android:layout_width="347dp"
        android:layout_height="121dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="104dp"
        android:gravity="top"
        android:lineSpacingExtra="2sp"
        android:text="@string/finalregistro"
        android:textAppearance="@style/reg_strese_"
        android:textSize="24sp"
        android:translationY="-0.97sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/para_empeza1" />


    <TextView
        android:id="@+id/username"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="32dp"
        android:hint="Nombre de Usuario"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reg_strese_2" />

    <EditText
        android:id="@+id/fechanacimiento"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:hint="Fecha de Nacimiento(dd/mm/aa)"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/telefono"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="32dp"
        android:hint="Telefono Celular"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fechanacimiento" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="91dp"
        android:text="Guardar Inicio de Sesión"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/telefono" />

    <Button
        android:id="@+id/registrarse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="64dp"
        android:text="Iniciar Sesión"
        android:textColor="#FDF1F1"
        app:backgroundTint="#0008C7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox1"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="47dp"
        android:layout_height="41dp"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toStartOf="@+id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reg_strese_2"
        app:srcCompat="@drawable/iconsusuario" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="36dp"
        android:layout_height="53dp"
        android:layout_marginTop="73dp"
        app:layout_constraintEnd_toStartOf="@+id/telefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fechanacimiento"
        app:srcCompat="@drawable/iconswhatsapp" />

</androidx.constraintlayout.widget.ConstraintLayout>