<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tiendas">
    <include layout="@layout/activity_horizontal"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="Tiendas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Categorias: Actualidad"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jama.carouselview.CarouselView
        android:id="@+id/carouselViewTiendas1"
        android:layout_width="370dp"
        android:layout_height="248dp"
        android:background="@drawable/elec1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:spacing="20">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="203dp"
            android:layout_height="64dp"
            android:text="ELECTRODOMESTICOS: \nTODO PARA TU HOGAR \nLOS MEJORES PRECIOS"
            android:textColor="#F8EFE9E9"
            android:textSize="16sp"
            android:textStyle="bold" />
    </com.jama.carouselview.CarouselView>


    <com.jama.carouselview.CarouselView
        android:id="@+id/carouselViewTiendas2"
        android:layout_width="366dp"
        android:layout_height="282dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/ropa1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:spacing="20">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="208dp"
            android:layout_height="62dp"
            android:text="ROPA: \nTODOS LOS MODELOS \nLOS MEJORES PRECIOS"
            android:textColor="#FAF5F5"
            android:textSize="16sp"
            android:textStyle="bold" />
    </com.jama.carouselview.CarouselView>

</androidx.constraintlayout.widget.ConstraintLayout>